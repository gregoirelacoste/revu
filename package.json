{
  "name": "revu",
  "version": "2.0.0-alpha",
  "description": "TUI code review tool for multi-service architectures",
  "type": "module",
  "bin": {
    "revu": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts ..",
    "build": "tsc -p tsconfig.node.json",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ --ext .ts,.tsx"
  },
  "dependencies": {
    "ink": "^5.1.0",
    "react": "^18.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@typescript-eslint/typescript-estree": "^8.0.0",
    "eslint": "^10.0.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
