{
  "name": "revu",
  "version": "0.1.0",
  "description": "Visual spatial code review for multi-service architectures",
  "type": "module",
  "bin": {
    "revu": "./dist/cli.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "tsx watch src/cli.ts ..",
    "dev:web": "vite",
    "build": "npm run build:server && npm run build:web",
    "build:server": "tsc -p tsconfig.node.json",
    "build:web": "vite build",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/typescript-estree": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  }
}
